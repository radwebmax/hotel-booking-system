@model IEnumerable<HotelReservation.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Reservations</h1>

<section class='manage__reservations'>
    <p>
    <a asp-action="Create" class='boxed'>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomPreference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestsNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChildrenNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomPreference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestsNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChildrenNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</section>
